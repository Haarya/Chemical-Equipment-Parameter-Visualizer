# ===================================
# Chemical Equipment Parameter Visualizer
# Environment Variables Configuration
# ===================================
# 
# SECURITY: Copy this file to .env and fill in actual values
# NEVER commit .env file to Git!
#

# Django Secret Key
# Generate new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated, no spaces)
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Allowed Origins (comma-separated, no spaces)
# Include React frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF Trusted Origins (comma-separated, no spaces)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Rate Limiting
# Format: number/period (e.g., 100/hour, 1000/day)
THROTTLE_ANON=20/hour
THROTTLE_USER=100/hour

# Database Configuration (SQLite by default)
# For PostgreSQL/MySQL, add: DATABASE_URL=postgres://user:pass@host:port/dbname

# Email Configuration (for password reset, notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# Optional: Sentry for error tracking (production)
# SENTRY_DSN=your-sentry-dsn-here
